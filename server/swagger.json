          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Ingredients": {
      "type": "array",
      "$ref": "#/definitions/Ingredient"
    },
    "CreateIngredient": {
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "ApproveRecipe": {
      "required": ["id", "status"],
      "properties": {
        "id": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "RecipeIngredient": {
      "required": ["id", "amount", "unit"],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "amount": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "unit": {
          "type": "string",
          "enum": ["g", "ml", "pcs"],
          "description": "allowed values are only `g` for grams and `ml` for millilitre"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "RecipeIngredients": {
      "type": "array",
      "$ref": "#/definitions/RecipeIngredient"
    },
    "Recipe": {
      "required": ["author", "ingredients", "category", "procedure", "title"],
      "properties": {
        "author": {
          "type": "string"
        },
        "category": {
