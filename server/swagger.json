          "enum": ["starter", "soup", "main course", "dessert", "snack"]
        },
        "description": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "procedure": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "CreateRecipe": {
